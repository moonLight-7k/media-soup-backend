# Server Configuration
PORT=3002
NODE_ENV=development

# MediaSoup Configuration
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1

# RTC Port Range
RTC_MIN_PORT=10000
RTC_MAX_PORT=10100

# DTLS Certificates (optional, for production)
# DTLS_CERT_FILE=/path/to/cert.pem
# DTLS_PRIVATE_KEY_FILE=/path/to/private-key.pem

# Logging Configuration
LOG_LEVEL=debug

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Production Settings (for deployment)
# MEDIASOUP_ANNOUNCED_IP=your-public-ip-address
# NODE_ENV=production
# LOG_LEVEL=info

# Database Configuration (if you add persistence later)
# DATABASE_URL=mongodb://localhost:27017/mediasoup-rooms
# REDIS_URL=redis://localhost:6379

# Security Settings
# JWT_SECRET=your-jwt-secret-here
# SESSION_SECRET=your-session-secret-here

# Rate Limiting
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# File Upload (if you add file sharing)
# MAX_FILE_SIZE=10485760
# UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password